{
  "manifest_version": 2,

  "name": "Reddit Deduplicator",
  "version": "0.1",

  "author": "Nicholas Gaya",
  "description": "Detect and hide duplicate posts on Reddit",

  "permissions": [
    "*://*.thumbs.redditmedia.com/*",
    "storage"
  ],

  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/*"
      ],
      "js": [
        "dct.js",
        "rededup.js"
      ]
    }
  ]
}
