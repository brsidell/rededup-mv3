{
  "manifest_version": 2,

  "name": "Reddit Deduplicator",
  "version": "1.0",

  "author": "Nicholas Gaya",
  "description": "Hide duplicate posts on pre-redesign Reddit.",
  "homepage_url": "https://github.com/nickgaya/rededup/",

  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },

  "permissions": [
    "*://*.thumbs.redditmedia.com/*",
    "storage"
  ],

  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.reddit.com/*"
      ],
      "js": [
        "dct.js",
        "rededup.js"
      ]
    }
  ]
}
